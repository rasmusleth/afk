<div class="form-row">
  <div class="form-item">
    <label for="">Title</label>
    <input type="text" name="title" id="" value="<%= book.title %>">    
  </div>
  <div class="form-item">
    <label for="">Author</label>
    <select name="author">
    <% authors.forEach(author => { %>
      <% if (author.id === book.author) { %> 
        <option selected label="<%= author.name %>" value="<%= author.id %>">
      <% } else { %>
        <option label="<%= author.name %>" value="<%= author.id %>">
      <% } %>    
    <% }) %> 
    </select>
  </div>
</div>
<div class="form-row">
  <div class="form-item">
    <label for="">Publish Date</label>
    <input type="date" name="publishDate" id="" 
        value="<%= book.publishDate == null ? "" :
        book.publishDate.toISOString().split("T")[0] %>">
  </div>
  <div class="form-item">
    <label for="">Page Count</label>
    <input type="number" name="pageCount" id="" min="1" value="<%= book.pageCount %>">
  </div>
</div>
<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label for="">Cover</label>
    <input type="file" name="cover" class="book-cover filepond">
  </div>
  <div class="form-item">
    <label for="">Description</label>
    <textarea name="description"><%= book.description %> </textarea>
  </div>
</div>